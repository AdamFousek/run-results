{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": [
    "resources/**/*.ts",
    "resources/**/*.d.ts",
    "resources/**/*.vue"
  ],
  "compilerOptions": {
    "allowJs": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"],
      "ziggy-js": ["./vendor/tightenco/ziggy"],
    },
    "types": ["vite/client"],
  },
  "exclude": [
    "node_modules"
  ]
}